#!/usr/bin/env bash

case "$1" in
    build)
        cp /home/zvyagin/Projects/dto-code-generator/cgdto/examples/mcsdk/output/dto/mcsdk.ts /home/zvyagin/Projects/dto-code-generator/cgdto/examples/mcsdk/output/test/typescript/dto.ts
        cp /home/zvyagin/Projects/dto-code-generator/cgdto/examples/mcsdk/output/test/mcsdk_test.ts /home/zvyagin/Projects/dto-code-generator/cgdto/examples/mcsdk/output/test/typescript/dto_tests.ts
        npm install typescript
        npm install --save-dev @types/node
        ./node_modules/typescript/bin/tsc --lib es2022 dto_tests.ts
        ;;
    *)
        node dto_tests.js $@
        ;;
esac
